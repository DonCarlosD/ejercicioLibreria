{%extends 'base.html.twig' %}

{% block title %}Nuevo libro{% endblock %}

{% block body %}
    <h2>Crear nuevo libro</h2>
    {% for error in errors %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endfor %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    <a href="{{ path('app_list_libros') }}">Volver a la lista de libros</a>
{% endblock %}
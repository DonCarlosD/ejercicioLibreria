{% extends 'base.html.twig' %}

{% block title %}Autores{% endblock %}

{%block body %}

    <h2>Lista de autores</h2>
    <a href="{{ path('app_new_autor') }}">Crear nuevo autor</a>
    <table id="myTable" class="display">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>
                <th>Fecha de Nacimiento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for autor in autores %}
                <tr>
                    <td>{{ autor.id }}</td>
                    <td>{{ autor.name }}</td>
                    <td>{{ autor.apellidoPaterno }}</td>
                    <td>{{ autor.apellidoMaterno }}</td>
                    <td>{{ autor.fechaNac ? autor.fechaNac|date('Y-m-d') : 'N/A' }}</td>
                    <td>
                        <a href="{{ path('app_autor_by_id', {'id': autor.id}) }}">Ver</a>
                        <a href="{{ path('app_update_autor', {'id': autor.id}) }}">Editar</a>
                        <form action="{{ path('app_delete_autor', {'id': autor.id}) }}" method="post" style="display:inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No hay autores disponibles.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}